{
  "name": "aitoolkit/laravel-ai-toolkit",
  "description": "A professional, production-ready Laravel package for integrating multiple AI providers with advanced features like async\nprocessing, real-time streaming, intelligent caching, and error handling.",
  "version": "1.0.0",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^11.0|^12.0",
    "openai-php/client": "v0.17.0",
    "anthropic-ai/sdk": "v0.3.0",
    "filament/filament": "^4.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "orchestra/testbench": "^9.0",
    "laravel/pint": "v1.25.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "AIToolkit\\AIToolkit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AIToolkit\\AIToolkit\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "test-coverage-html": "vendor/bin/pest --coverage-html coverage",
    "test-watch": "vendor/bin/pest --watch",
    "test-parallel": "vendor/bin/pest --parallel",
    "pint": "vendor/bin/pint",
    "pint-test": "vendor/bin/pint --test",
    "fix": "@pint",
    "check": [
      "@pint-test",
      "@test-coverage"
    ],
    "ci": [
      "@pint",
      "@test-coverage"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "AIToolkit\\AIToolkit\\AIToolkitServiceProvider"
      ]
    }
  }
}
